version: '3'
services:
  web:
    build:
      context: ./cidd/php
      args:
        - SERVICE_DOMAIN
    image: ${COMPOSE_PROJECT_NAME}-web
    depends_on:
      - db
    ports:
      - 80:80
      - 443:443
  db:
    build: 
      context: ./cidd/db
    image: ${COMPOSE_PROJECT_NAME}-db
    environment:
      - MYSQL_ROOT_PASSWORD
      - MYSQL_DATABASE
      - MYSQL_USER
      - MYSQL_PASSWORD
