{
  "env": {
  },
  "stages":{
    "cleanup":{
      "cmds":["docker volume rm $(docker volume ls -qf dangling=true)"]
    },
    "prereq1":{
      "cmds":[
        "npm install -g @angular/cli",
        "apr-get -y install python-jsonschema python-requests"
      ]
    },
    "up":{
      "cmds":[
"export $(cat ./.env | grep -v ^# | xargs)",
"pushd services/api",
"export API_ARTIFACT=$(mvn -q -Dexec.executable='echo' -Dexec.args='${project.artifactId}-${project.version}-jar-with-dependencies.${project.packaging}' --non-recursive org.codehaus.mojo:exec-maven-plugin:1.3.1:exec)",
"popd",
"docker-compose up $1 --scale $LB_STATIC_WEB_NAME=$LB_STATIC_WEB_NUM --scale $LB_SERVICES_API_NAME=$LB_SERVICES_API_NUM"
      ]
    },
    "stop":{
      "cmds":["docker-compose stop"]
    },
    "down":{
      "cmds":["docker-compose down --rmi all"]
    }
  },
  "components":[
    {
      "id":"services",
      "components":[
        {
          "id":"api",
          "inherits":["java/maven"],
          "stages":{
            "build":{
              "cmds":[
                "export $(cat ./../../.env | grep -v ^# | xargs)",
                "mvn clean install"
              ]
            },
            "build-prod":{
              "cmds":[
                "export $(cat ./../../.env | grep -v ^# | xargs)",
                "mvn clean install"
              ]
            },
            "exec":{
              "cmds":[
                "export $(cat ./../../.env | grep -v ^# | xargs)",
                "mvn exec:java"
              ]
            }
          }
        }
      ]
    },
    {
      "id":"static",
      "components":[
        {
          "id":"client",
          "subtree":{
            "repo":"https://github.com/project-talan/tln-angular.git",
            "branch":"master"
          }
        },
        {
          "id":"web",
          "inherits":["angular"],
          "stages":{
            "prereq":{
              "cmds":["npm install"]
            },
            "build":{
              "cmds":[
                "export $(cat ./../../.env | grep -v ^# | xargs)",
                "ng build"
              ]
            },
            "build-prod":{
              "cmds":[
                "export $(cat ./../../.env | grep -v ^# | xargs)",
                "ng build --prod --env=prod"
              ]
            },
            "serve":{
              "cmds":["ng serve --host 0.0.0.0 --port 4201"]
            }
          }
        }
      ]
    }
  ]
}